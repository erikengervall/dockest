{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src": ["./*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["dist", "node_modules", "example/node_modules"]
}
