{
  "compilerOptions": {
    "baseUrl": "./packages/dockest/src",
    "paths": {
      "src": ["./*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./packages/dockest/src/**/*.*"],
  "exclude": ["dist", "node_modules", "typedoc", "docs", "**/*.spec.*"]
}
