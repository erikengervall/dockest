{
  "name": "dockest-monorepo",
  "version": "1.0.0",
  "homepage": "https://github.com/erikengervall/dockest#readme",
  "bugs": {
    "url": "https://github.com/erikengervall/dockest/issues"
  },
  "license": "MIT",
  "author": "Erik Engervall <erik@engervall.com> (http://engervall.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikengervall/dockest.git"
  },
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean --stream && rimraf ./node_modules",
    "install:deps": "yarn && lerna exec \"yarn\" --stream --ignore @examples/aws-codebuild--src",
    "build": "yarn install:deps && lerna run build --stream",
    "lint": "eslint \"./packages/**/*.ts\"",
    "test": "yarn test:unit && lerna run test:examples --stream",
    "test:concurrent": "yarn test:unit && lerna run test:examples --stream --concurrency 10",
    "test:examples": "lerna run test:examples --stream",
    "test:unit": "lerna run test:unit --stream",
    "generate:typedoc": "typedoc --tsconfig ./packages/dockest/tsconfig.json ./packages/dockest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/prettier": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "@typescript-eslint/typescript-estree": "^2.10.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-no-only-tests": "^2.3.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-mock-proxy": "^3.0.0",
    "lerna": "^3.19.0",
    "lint-staged": ">=9.5.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "rimraf": "^3.0.0",
    "snyk": "^1.254.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.15.2",
    "typedoc-plugin-markdown": "^2.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add"
    ]
  },
  "snyk": true
}
