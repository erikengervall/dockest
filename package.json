{
  "name": "dockest",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/lib",
    "packages/examples/*"
  ],
  "description": "Dockest is an integration testing tool aimed at alleviating the process of evaluating unit tests whilst running multi-container Docker applications.",
  "keywords": [
    "docker",
    "docker-compose",
    "jest",
    "nodejs",
    "node",
    "integration testing"
  ],
  "homepage": "https://github.com/erikengervall/dockest#readme",
  "bugs": {
    "url": "https://github.com/erikengervall/dockest/issues"
  },
  "license": "MIT",
  "author": "Erik Engervall <erik@engervall.com> (http://engervall.com)",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikengervall/dockest.git"
  },
  "scripts": {
    "clean": "lerna clean --yes && rimraf ./dist ./node_modules && yarn",
    "build": "lerna run build --stream",
    "lint": "eslint \"./packages/lib/**/*.ts\"",
    "test": "lerna run test --stream",
    "generate:typedoc": "typedoc ./packages/lib"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.7.11",
    "@types/prettier": "^1.18.3",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "@typescript-eslint/typescript-estree": "^2.3.2",
    "concurrently": "^4.1.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-no-only-tests": "^2.3.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-mock-proxy": "^3.0.0",
    "lerna": "^3.16.4",
    "lint-staged": ">=9.4.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.8",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
