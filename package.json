{
  "name": "dockest",
  "version": "1.0.0",
  "description": "Dockest is an integration testing tool aimed at alleviating the process of evaluating unit tests whilst running multi-container Docker applications.",
  "keywords": [
    "docker",
    "docker-compose",
    "jest",
    "nodejs",
    "node",
    "integration testing"
  ],
  "homepage": "https://github.com/erikengervall/dockest#readme",
  "bugs": {
    "url": "https://github.com/erikengervall/dockest/issues"
  },
  "license": "MIT",
  "author": "Erik Engervall <erik@engervall.com> (http://engervall.com)",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikengervall/dockest.git"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch",
    "test": "jest ./src",
    "test:example": "cd example && yarn test && cd ..",
    "test:all": "yarn test && yarn test:example",
    "dev:setup": "./dev-toolbox/setup && yarn install:all",
    "install:all": "yarn install && cd example && yarn install",
    "travis:install": "yarn install:all",
    "travis:script": "yarn test:all",
    "lint": "yarn eslint ./src/**/*.ts",
    "typedoc": "yarn typedoc ./src"
  },
  "dependencies": {
    "execa": "^2.0.3",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/prettier": "^1.16.4",
    "@types/rimraf": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@typescript-eslint/typescript-estree": "^1.12.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "jest-mock-proxy": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3"
  }
}
