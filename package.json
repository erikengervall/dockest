{
  "name": "dockest",
  "version": "0.3.2",
  "description": "Docker + Jest integration testing",
  "main": "dist/index.js",
  "author": "Erik Engervall",
  "email": "erik.engervall@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch",
    "test": "jest ./src",
    "test:example": "cd example && npm run test",
    "test:all": "npm run test && npm run test:example",
    "install:all": "npm install && cd example && npm install",
    "_postinstall": "npm run build",
    "setup": "./dev-toolbox/setup"
  },
  "dependencies": {
    "execa": "^1.0.0"
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/jest": "^24.0.0",
    "@types/sequelize": "^4.27.32",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "sequelize": "^4.41.2",
    "sequelize-cli": "^5.3.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  }
}
